{
  "name": "ChurchCRM Development",
  "dockerComposeFile": ["../docker/docker-compose.yaml", "docker-compose.override.yml"],
  "service": "webserver-dev",
  "workspaceFolder": "/home/ChurchCRM",
  "runServices": ["database", "webserver-dev", "mailserver"],
  "overrideCommand": false,
  
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": true,
      "configureZshAsDefaultShell": true,
      "installOhMyZsh": true,
      "installOhMyZshConfig": true,
      "upgradePackages": true,
      "username": "automatic",
      "userUid": "automatic",
      "userGid": "automatic"
    },
    "ghcr.io/devcontainers/features/git-lfs:1": {}
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.vscode-typescript-next",
        "bradlc.vscode-tailwindcss",
        "formulahendry.auto-rename-tag",
        "ms-vscode.vscode-json",
        "ms-vscode-remote.remote-containers",
        "GitHub.copilot",
        "GitHub.copilot-chat",
        "bmewburn.vscode-intelephense-client",
        "xdebug.php-debug",
        "ms-playwright.playwright"
      ],
      "settings": {
        "php.suggest.basic": false,
        "php.validate.enable": true,
        "php.validate.executablePath": "/usr/local/bin/php",
        "intelephense.files.maxSize": 1000000,
        "typescript.preferences.quoteStyle": "single",
        "editor.formatOnSave": true,
        "files.associations": {
          "*.php": "php"
        },
        "terminal.integrated.defaultProfile.linux": "bash"
      }
    }
  },

  "forwardPorts": [80, 3306, 8025, 8088],
  "waitFor": "onCreateCommand",
  "portsAttributes": {
    "80": {
      "label": "ChurchCRM Web Server",
      "onAutoForward": "notify"
    },
    "3306": {
      "label": "MariaDB Database"
    },
    "8025": {
      "label": "MailHog UI"
    },
    "8088": {
      "label": "Adminer Database UI"
    }
  },

  "onCreateCommand": [
    "bash", "-c", 
    ".devcontainer/init.sh && echo 'ğŸš€ Setting up ChurchCRM development environment...' && git lfs install && echo 'ğŸ“¦ Installing dependencies...' && npm ci && echo 'ğŸ—ï¸ Building application...' && timeout 300 npm run deploy || (echo 'âŒ Build timeout - continuing with basic setup' && npm run build:php) && echo 'âœ… ChurchCRM setup complete!'"
  ],

  "postStartCommand": ".devcontainer/post-start.sh",
  
  "postCreateCommand": [
    "bash", "-c",
    "echo 'ğŸ“‹ Development Environment Ready!' && echo 'ğŸŒ Web: http://localhost (admin/changeme)' && echo 'ğŸ“§ MailHog: http://localhost:8025' && echo 'ğŸ—„ï¸ Adminer: http://localhost:8088 (churchcrm/changeme)' && echo 'ğŸ§ª Tests: npm run test' && echo 'ğŸ“– Docs: see CONTRIBUTING.md'"
  ],

  "containerEnv": {
    "COMPOSER_ALLOW_SUPERUSER": "1",
    "NODE_ENV": "development"
  },

  "remoteUser": "root"
}