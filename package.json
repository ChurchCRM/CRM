{
    "name": "churchcrm",
    "version": "6.0.0",
    "description": "Free Church CRM Software",
    "repository": {
        "type": "git",
        "url": "https://github.com/ChurchCRM/CRM.git"
    },
    "keywords": [
        "Church",
        "CRM",
        "LAMP",
        "Free"
    ],
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/ChurchCRM/CRM/issues"
    },
    "homepage": "https://churchcrm.io",
    "scripts": {
        "audit": "npm audit fix --only=prod --audit-level=high",
        "build": "run-p build:php build:frontend",
        "build:frontend": "npm run build:js && npm run format:web",
        "build:js": "run-p build:js:legacy build:webpack",
        "build:js:legacy": "grunt curl-dir && grunt copy && grunt patchDataTablesCSS",
        "build:webpack": "webpack",
        "build:php": "run-s composer:install",
        "clean": "rm -rf node_modules/ temp src/vendor/ src/skin/external ai-notes/ src/logs/*.log",
        "composer:install": "cd src/ && composer validate --no-check-publish && composer install --no-dev",
        "composer:update": "cd src/ && composer update",
        "deploy": "run-s build deploy:signatures",
        "deploy:clean": "run-s preinstall deploy",
        "deploy:signatures": "grunt generateSignatures",
        "docker:ci:down": "docker compose -f docker/docker-compose.yaml -f docker/docker-compose.gh-actions.yaml --profile ci down -v",
        "docker:ci:start": "cp docker/Config.php src/Include/Config.php && docker compose -f docker/docker-compose.yaml -f docker/docker-compose.gh-actions.yaml --profile ci up -d --build",
        "docker:dev:login:db": "docker compose -f docker/docker-compose.yaml --profile dev exec database bash",
        "docker:dev:login:web": "docker compose -f docker/docker-compose.yaml --profile dev exec webserver-dev bash",
        "docker:dev:logs": "docker compose -f docker/docker-compose.yaml --profile dev logs -f --tail=10",
        "docker:dev:start": "cp docker/Config.php src/Include/Config.php && docker compose -f docker/docker-compose.yaml --profile dev up -d --build",
        "docker:dev:stop": "docker compose -f docker/docker-compose.yaml --profile dev stop",
        "docker:test:down": "docker compose -f docker/docker-compose.yaml --profile test down -v",
        "docker:test:login:db": "docker compose -f docker/docker-compose.yaml --profile test exec database bash",
        "docker:test:login:web": "docker compose -f docker/docker-compose.yaml --profile test exec webserver-test bash",
        "docker:test:logs": "docker compose -f docker/docker-compose.yaml --profile test logs -f --tail=10",
        "docker:test:restart": "npm run docker:test:down && npm run docker:test:start",
        "docker:test:start": "cp docker/Config.php src/Include/Config.php && docker compose -f docker/docker-compose.yaml --profile test up -d --build",
        "docker:test:stop": "docker compose -f docker/docker-compose.yaml --profile test stop",
        "format:web": "prettier --write \"src/**/*.{js,jsx,ts,tsx,css,scss,html,json}\"",
        "locale:audit": "node locale/scripts/locale-audit.js",
        "locale:build": "node locale/scripts/locale-term-extract.js",
        "locale:clean": "rm -rf src/locale/textdomain/**/**/*.po src/locale/textdomain/**/**/*.mo locale/JSONKeys/*.json",
        "locale:download": "npm run locale:clean && node locale/scripts/poeditor-downloader.js && grunt genLocaleJSFiles && npm run locale:audit",
        "package": "npm run deploy && rm -rf src/propel src/composer.lock && grunt compress",
        "postinstall": "grunt genLocaleJSFiles",
        "changelog": "node scripts/generate-changelog.js",
        "test": "cp docker/cypress.config.ts cypress.config.ts && node_modules/cypress/bin/cypress run --e2e",
        "test:ui": "cp docker/cypress.config.ts cypress.config.ts && node_modules/cypress/bin/cypress open --e2e --browser chrome"
    },
    "dependencies": {
        "@fortawesome/fontawesome-free": "^6.7.2",
        "@ttskch/select2-bootstrap4-theme": "^1.5.2",
        "@uppy/core": "^4.5.3",
        "@uppy/dashboard": "^4.4.3",
        "@uppy/webcam": "^4.3.2",
        "@uppy/xhr-upload": "^4.4.2",
        "admin-lte": "3.2.0",
        "bootbox": "^6.0.4",
        "bootstrap": "^4.6.2",
        "bootstrap-datepicker": "^1.10.1",
        "bootstrap-notify": "^3.1.3",
        "bootstrap-show-password": "^1.3.0",
        "bootstrap-toggle": "^2.2.2",
        "bootstrap-validator": "^0.11.9",
        "chart.js": "^4.5.0",
        "datatables.net": "^1.13.8",
        "datatables.net-bs4": "^1.13.8",
        "datatables.net-buttons": "^2.3.6",
        "datatables.net-buttons-bs4": "^2.3.6",
        "datatables.net-responsive": "^2.4.1",
        "datatables.net-responsive-bs4": "^2.4.1",
        "datatables.net-select": "^1.6.2",
        "datatables.net-select-bs4": "^1.6.2",
        "daterangepicker": "^3.1.0",
        "flag-icons": "^7.5.0",
        "fullcalendar": "^6.1.19",
        "i18n": "^0.15.2",
        "i18next": "^24.2.3",
        "inputmask": "^5.0.9",
        "jquery": "^3.7.1",
        "jquery-steps": "^1.1.0",
        "jquery-validation": "^1.21.0",
        "jszip": "^3.10.1",
        "pdfmake": "^0.2.0",
        "quill": "^2.0.3",
        "react": "^19.2.0",
        "react-bootstrap": "^2.10.10",
        "react-datepicker": "^8.7.0",
        "react-dom": "^19.2.0",
        "react-select": "^5.10.2",
        "select2": "^4.0.13"
    },
    "devDependencies": {
        "@types/jquery": "^3.5.32",
        "@types/react": "^18.3.18",
        "@types/react-dom": "^18.3.5",
        "css-loader": "^7.1.2",
        "cy-verify-downloads": "^0.2.6",
        "cypress": "^15.4.0",
        "grunt": "^1.6.1",
        "grunt-cli": "^1.5.0",
        "grunt-contrib-compress": "^2.0.0",
        "grunt-contrib-copy": "^1.0.0",
        "grunt-curl": "^2.5.1",
        "i18next-conv": "^15.1.0",
        "i18next-parser": "^9.3.0",
        "mini-css-extract-plugin": "^2.9.4",
        "mysql2": "^3.15.2",
        "node-sha1": "^1.0.1",
        "npm-run-all": "^4.1.5",
        "prettier": "^3.6.2",
        "sass": "^1.93.2",
        "sass-loader": "^16.0.5",
        "style-loader": "^4.0.0",
        "ts-loader": "^9.5.1",
        "typescript": "^5.7.2",
        "webpack": "^5.97.1",
        "webpack-cli": "^5.0.0"
    }
}
