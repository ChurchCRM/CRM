{
    "name": "churchcrm",
    "version": "5.21.0",
    "description": "Free Church CRM Software",
    "repository": {
        "type": "git",
        "url": "https://github.com/ChurchCRM/CRM.git"
    },
    "keywords": [
        "Church",
        "CRM",
        "LAMP",
        "Free"
    ],
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/ChurchCRM/CRM/issues"
    },
    "homepage": "https://churchcrm.io",
    "scripts": {
        "audit": "npm audit fix --only=prod --audit-level=high",
        "build": "run-p build:php build:frontend",
        "build:frontend": "npm run build:js && npm run format:web && npm run sass:build",
    "build:js": "run-p build:js:legacy build:webpack",
    "build:js:legacy": "grunt curl-dir && grunt copy && grunt patchDataTablesCSS",
    "build:webpack": "webpack",
        "build:php": "run-s composer:install",
        "clean": "rm -rf node_modules/ temp src/vendor/ src/skin/external",
        "composer:install": "cd src/ && composer validate --no-check-publish && composer install --no-dev",
        "composer:update": "cd src/ && composer update",
        "deploy": "run-s build deploy:signatures",
        "deploy:clean": "run-s preinstall deploy",
        "deploy:signatures": "grunt generateSignatures",
        "docker:ci:down": "docker compose -f docker/docker-compose.test-php8-apache.yaml -f docker/docker-compose.test-php8-apache.gh-actions.yaml down -v",
        "docker:ci:start": "cp docker/Config.php src/Include/Config.php && docker compose -f docker/docker-compose.test-php8-apache.yaml -f docker/docker-compose.test-php8-apache.gh-actions.yaml up -d --build",
        "docker:dev:logs": "docker compose -f docker/docker-compose.dev-php8-apache.yaml logs -f --tail=10",
        "docker:dev:login:db": "docker compose -f docker/docker-compose.dev-php8-apache.yaml exec database bash",
        "docker:dev:login:web": "docker compose -f docker/docker-compose.dev-php8-apache.yaml exec webserver bash",
        "docker:dev:start": "cp docker/Config.php src/Include/Config.php && docker compose -f docker/docker-compose.dev-php8-apache.yaml up -d --build",
        "docker:dev:stop": "docker compose -f docker/docker-compose.dev-php8-apache.yaml stop",
        "docker:test:down": "docker compose -f docker/docker-compose.test-php8-apache.yaml down -v",
        "docker:test:login:db": "docker compose -f docker/docker-compose.test-php8-apache.yaml exec database bash",
        "docker:test:login:web": "docker compose -f docker/docker-compose.test-php8-apache.yaml exec webserver bash",
        "docker:test:logs": "docker compose -f docker/docker-compose.test-php8-apache.yaml logs -f --tail=10",
        "docker:test:restart": "npm run docker:test:down && npm run docker:test:start",
        "docker:test:start": "cp docker/Config.php src/Include/Config.php && docker compose -f docker/docker-compose.test-php8-apache.yaml up -d --build",
        "docker:test:stop": "docker compose -f docker/docker-compose.test-php8-apache.yaml stop",
        "format:web": "prettier --write \"src/**/*.{js,jsx,ts,tsx,css,scss,html,json}\"",
        "locale:audit": "node locale/scripts/locale-audit.js",
        "locale:build": "node locale/scripts/locale-term-extract.js",
        "locale:clean": "rm -rf src/locale/textdomain/**/**/*.po src/locale/textdomain/**/**/*.mo locale/JSONKeys/*.json",
        "locale:download": "npm run locale:clean && grunt updateFromPOeditor && grunt genLocaleJSFiles && npm run locale:audit",
        "package": "npm run deploy && rm -rf src/propel src/composer.lock && grunt compress",
        "postinstall": "grunt genLocaleJSFiles",
        "sass:build": "sass src/skin/churchcrm.scss src/skin/churchcrm.min.css --no-source-map --style=compressed",
        "sass:watch": "sass --watch src/skin/churchcrm.scss:src/skin/churchcrm.min.css --style=compressed",
        "test": "cp docker/cypress.config.ts cypress.config.ts && node_modules/cypress/bin/cypress run --e2e",
        "test:ui": "cp docker/cypress.config.ts cypress.config.ts && node_modules/cypress/bin/cypress open --e2e --browser chrome"
    },
    "dependencies": {
        "@fortawesome/fontawesome-free": "^6.7.2",
        "admin-lte": "3.2.0",
        "bootbox": "^6.0.4",
        "bootstrap": "^4.6.2",
        "bootstrap-datepicker": "^1.10.0",
        "bootstrap-notify": "^3.1.3",
        "bootstrap-show-password": "^1.3.0",
        "bootstrap-toggle": "^2.2.2",
        "bootstrap-validator": "^0.11.9",
        "chart.js": "^4.5.0",
        "ckeditor4": "^4.25.1",
        "daterangepicker": "^3.1.0",
        "flag-icons": "^7.5.0",
        "fullcalendar": "^6.1.19",
        "i18n": "^0.15.1",
        "i18next": "^24.2.3",
        "icheck-bootstrap": "^3.0.1",
        "inputmask": "^5.0.9",
        "jquery": "^3.7.1",
        "jquery-photo-uploader": "^1.0.13",
        "jquery-steps": "^1.1.0",
        "jquery-validation": "^1.21.0",
        "pace-js": "^1.2.4",
        "react": "^18.3.1",
        "react-bootstrap": "^2.10.10",
        "react-datepicker": "^8.7.0",
        "react-dom": "^18.3.1",
        "react-select": "^5.10.2",
        "select2": "^4.0.13"
    },
    "devDependencies": {
        "@types/jquery": "^3.5.32",
        "@types/react": "^18.3.18",
        "@types/react-dom": "^18.3.5",
        "css-loader": "^7.1.2",
        "cy-verify-downloads": "^0.2.6",
        "cypress": "^15.4.0",
        "grunt": "^1.6.1",
        "grunt-cli": "^1.5.0",
        "grunt-contrib-compress": "^2.0.0",
        "grunt-contrib-copy": "^1.0.0",
        "grunt-curl": "^2.5.1",
        "grunt-poeditor-gd": "^0.2.1",
        "i18next-conv": "^15.1.0",
        "i18next-parser": "^9.3.0",
        "mysql2": "^3.15.2",
        "node-sha1": "^1.0.1",
        "npm-run-all": "^4.1.5",
        "prettier": "^3.6.2",
        "sass": "^1.91.0",
        "sass-loader": "^16.0.5",
        "style-loader": "^4.0.0",
        "ts-loader": "^9.5.1",
        "typescript": "^5.7.2",
        "webpack": "^5.97.1",
        "webpack-cli": "^5.0.0"
    }
}
