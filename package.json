{
  "name": "ChurchCRM",
  "description": "Free Church CRM Software",
  "repository": {
    "type": "git",
    "url": "https://github.com/ChurchCRM/CRM.git"
  },
  "keywords": [
    "Church",
    "CRM",
    "LAMP",
    "Free"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ChurchCRM/CRM/issues"
  },
  "homepage": "http://www.churchcrm.io",
  "devDependencies": {
    "grunt": "~0.4.1",
    "grunt-curl": "~2.2.0",
    "grunt-contrib-concat": "^1.0.1",
    "grunt-contrib-clean": "^1.0.0",
    "grunt-contrib-copy": "^1.0.0",
    "grunt-contrib-compress": "^1.0.3",
    "grunt-contrib-rename": "^0.0.3",
    "node-sha1":"1.0.1"
  },
  "dependencies": {
    "admin-lte": "2.3.7",
    "ionicons": "2.0.1",
    "font-awesome": "4.6.3",
    "fullcalendar": "3.0.1"
  },
  "scripts": {
    "preinstall": "grunt clean",
    "install": "grunt curl-dir && grunt copy",
